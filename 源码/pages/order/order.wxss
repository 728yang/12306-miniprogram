.main{
	width: 100vw;
	/* height: 100vh; */
	flex-wrap: wrap;
	box-sizing: border-box;
	padding: 5px;
	background-color: rgb(231, 230, 230);
}

.detail_view{
	width: 100%;
	height: 250rpx;
	background-color: rgb(255, 255, 255);
	display: flex;
	flex-direction: column;
	margin-top: 10px;
	box-sizing: border-box;
	border: 1px solid rgb(168, 166, 166);
}
.top{
	width: 100%;
	height: 65%;
	/* background-color: burlywood; */
	display: flex;
	justify-content: space-around;
	border-bottom: 1px solid rgb(192, 190, 190);
}
.top .one,.two,.three,.four{
	width: 22%;
	height: 100%;
	/* background-color: teal; */
	box-sizing: border-box;
	display: flex;
	flex-direction: column;
	justify-content: space-evenly;
	align-items: center;
}
.startTime,.endTime{
	font-size: x-large;
	font-weight: bolder;
}

.bottom{
	width: 100%;
	height: 35%;
	/* background-color: violet; */
	display: flex;
	justify-content: flex-end;
	margin-right: 30px;
}

.bottom .one{
	width: 150px;
	height: 100%;
	box-sizing: border-box;
	font-size: small;
	display: flex;
	align-items: center;
	justify-content: center;
	font-size: large;
	/* background-color: rebeccapurple; */
}
.noBuy{
	width: 100vw;
	height: 200rpx;
	font-size: x-large;
	display: flex;
	justify-content: center;
	align-items: center;
	/* background-color: red; */
}