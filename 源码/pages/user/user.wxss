
.avatar{
	background-color: #1E90FF;
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
	height: 400rpx;
	color: #fff;
	line-height: 2;
}
.avatar image{
	width: 200rpx;
	height: 200rpx;
	border-radius: 50%;
	border: 10rpx solid rgba(0, 0, 0, 0.1);
}
.icons{
	display: flex;
	justify-content: space-around;
	background-color: #fff;
	padding: 40rpx 0;
	line-height: 2;
}
.icon{
	width: 220rpx;
	/* background-color: red; */
	display: flex;
	flex-direction: column;
	align-items: center;
}
.icon image{
	width: 80rpx;
}
.menus{
	background-color: #fff;
	margin-top: 10rpx;
	padding: 0 40rpx;
}
.menu{
	padding: 35rpx 0;
	border-bottom: 1rpx solid #ddd;
}
.menu:last-child{
	border: none;
}